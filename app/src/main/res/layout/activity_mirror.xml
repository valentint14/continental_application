<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MirrorActivity">

    <ImageView
        android:id="@+id/m_left_arrow"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="128dp"
        android:rotation="-180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/m_right_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/m_down_arrow"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="254dp"
        android:rotation="+90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/m_right_arrow"
        app:layout_constraintStart_toStartOf="@+id/m_left_arrow"
        app:layout_constraintTop_toBottomOf="@+id/m_up_arrow"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/m_right_arrow"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/m_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/m_up_arrow"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="128dp"
        android:rotation="-90"
        app:layout_constraintBottom_toTopOf="@+id/m_down_arrow"
        app:layout_constraintEnd_toEndOf="@+id/m_right_arrow"
        app:layout_constraintStart_toStartOf="@+id/m_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>